<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/PickDrawerLayout"
    tools:context=".Activities.MapPickActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/PickMapView"
        mapoptions.MapType="streets"
        mapoptions.ZoomLevel="80"
        mapoptions.center="34.056215, -117.195668"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/PickNav_view"
        android:background="@color/Lightblue"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        app:menu="@menu/example_menu"
        android:layout_gravity="start"
        />

</androidx.drawerlayout.widget.DrawerLayout>
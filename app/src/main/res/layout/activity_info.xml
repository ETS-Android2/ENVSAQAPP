<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent"
    tools:context=".Info">

    <TextView

        android:id="@+id/infoTextView1"
        android:text="Find information om luftforurening i Danmark"
        android:textColor="@color/Black"
        android:textSize="19sp"
        android:fontFamily="sans-serif-black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="18sp"
        android:id="@+id/infoTextViewLink1"
        android:layout_below="@+id/infoTextView1"
        android:textColor="@color/Black"
        android:linksClickable="true"
        android:text="@string/LinkToLPDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_below="@id/infoTextViewLink1"
        android:id="@+id/infoTextView2"
        android:text="Find information om partikeltyper"
        android:textColor="@color/Black"
        android:textSize="19sp"
        android:fontFamily="sans-serif-black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/infoTextViewLink2"
        android:layout_below="@+id/infoTextView2"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:linksClickable="true"
        android:text="@string/LinkToWiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
   <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SkalaDrawerLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Lightblue"
    android:layout_height="match_parent"
    tools:context=".Activities.Forureningskala">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forureningsskala"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="30dp"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:background="@color/BackGroundGrey"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Luftforunrenings \n index"
                android:layout_width="150dp"
                android:layout_height="55dp"/>

            <TextView
                android:background="@color/Green"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="God"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"/>
            <TextView
                android:background="@color/Yellow"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Middel"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@color/Red"
                android:text="Dårlig"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/BackGroundGrey"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Kvælstof-dioxid\n (NO2)"
                android:layout_height="55dp"
                android:layout_width="150dp"/>

            <TextView
                android:gravity="center"
                android:background="@color/Green"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="0-30"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"/>
            <TextView
                android:gravity="center"
                android:background="@color/Yellow"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="30-50"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@color/Red"
                android:text="50+"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/BackGroundGrey"
                android:textAlignment="center"
                android:textSize="20sp"
                android:gravity="center"
                android:text="PM2.5 partikler"
                android:layout_height="55dp"
                android:layout_width="150dp"/>

            <TextView
                android:gravity="center"
                android:background="@color/Green"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="0-5"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"/>
            <TextView
                android:gravity="center"
                android:background="@color/Yellow"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="5-15"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@color/Red"
                android:text="15+"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/BackGroundGrey"
                android:textAlignment="center"
                android:textSize="20sp"
                android:gravity="center"
                android:text="PM10 partikler"
                android:layout_height="55dp"
                android:layout_width="150dp"/>

            <TextView
                android:gravity="center"
                android:background="@color/Green"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="0-10"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"/>
            <TextView
                android:gravity="center"
                android:background="@color/Yellow"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="10-30"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@color/Red"
                android:text="30+"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:padding="1dp">

    <TextView
        android:gravity="center"
        android:background="@color/BackGroundGrey"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Luftforurenings \n index"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@color/BackGroundGrey"
        android:text="Helbredsindflydelse"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"

        />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:gravity="center"
                android:background="@color/Green"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="God"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:textSize="20sp"
                android:background="@color/Green"
                android:text="Sikkert at færdes i, og har ingen indflydels på helbredet"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:gravity="center"
                android:background="@color/Yellow"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Middel"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:textSize="20sp"
                android:background="@color/Yellow"
                android:text="Kan have indflydelse på vejrtrækningen hos folk med udsatte lunger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="2dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:gravity="center"
                android:background="@color/Red"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Dårlig"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:textSize="20sp"
                android:background="@color/Red"
                android:text="Kan give større helbredsproblemer hos folk med udsatte lunger eller dårlig hjerte"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="2dp"

                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/SkalaNav_view"
        android:background="@color/Lightblue"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        app:menu="@menu/example_menu"
        android:layout_gravity="start"
        />

    </androidx.drawerlayout.widget.DrawerLayout>